{
    "name": "substract-cli",
    "version": "1.2.0",
    "description": "CLI for using the substract library.",
    "source": "src/index.ts",
    "main": "dist/main.js",
    "bin": {
        "substract-cli": "./dist/index.js"
    },
    "type": "module",
    "scripts": {
        "start": "bun run src/index.ts",
        "build": "NODE_ENV=production bun build src/index.ts --outdir dist --target node --packages=external",
        "compile": "NODE_ENV=production bun build src/index.ts --target node --compile --outfile dist/substract-cli"
    },
    "files": [
        "dist/index.js"
    ],
    "keywords": [
        "srt",
        "subtitle",
        "subtitles",
        "video",
        "nodejs"
    ],
    "author": "Ragaeeb Haq",
    "license": "MIT",
    "dependencies": {
        "@distube/ytdl-core": "^4.15.8",
        "cli-welcome": "^3.0.0",
        "conf": "^13.1.0",
        "fb-downloader-scrapper": "^2.0.0",
        "log-symbols": "^7.0.0",
        "meow": "^13.2.0",
        "picocolors": "^1.1.1",
        "pretty-js-log": "^1.1.1",
        "substract": "^1.0.1",
        "twitter-downloader": "^1.1.8"
    },
    "devDependencies": {
        "@eslint/js": "^9.17.0",
        "@semantic-release/changelog": "^6.0.3",
        "@types/eslint__js": "^8.42.3",
        "@types/node": "^22.10.2",
        "eslint": "^9.17.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-perfectionist": "^4.3.0",
        "eslint-plugin-prettier": "^5.2.1",
        "prettier": "^3.4.2",
        "semantic-release": "^24.2.0",
        "typescript-eslint": "^8.18.1"
    }
}
